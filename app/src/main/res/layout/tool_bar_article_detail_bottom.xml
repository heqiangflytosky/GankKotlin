<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="@dimen/tool_bar_bottom_height"
              android:background="@color/tool_bar_bottom_background"
              android:orientation="vertical">
    <View style="@style/AppTheme.DeepLine"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/favorite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:paddingLeft="15dp"
            android:src="@drawable/ic_action_favorite_outline_gray"/>
        <ImageView
            android:id="@+id/share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/favorite"
            android:paddingLeft="25dp"
            android:src="@drawable/ic_action_share"/>
        <TextView
            android:id="@+id/presenter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            style="@style/ToolBarBottomTextAppearance"/>
    </RelativeLayout>

</LinearLayout>